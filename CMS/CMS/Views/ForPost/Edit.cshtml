@model CMS.Models.Post

@{
    
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.PostID)
    
    <div class="editor-label">
        @Html.LabelFor(model => model.Theme)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Theme)
        @Html.ValidationMessageFor(model => model.Theme)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.PostText)
    </div>
    <div class="editor-field1">
        @Html.TextAreaFor(model => model.PostText, new { @class="editorinput" })
        @Html.ValidationMessageFor(model => model.PostText)
    </div>

    <p>
        <input type="submit" value="Save" class="button"/>
    </p>
   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

